extends template/layout
	
	
//- --------------- Header -------------- //
block custom_header
	script(src='/js/part2.js')
	script(src='/js/blockchain.js')
	script(type='text/javascript').
		$(document).ready(function(){
			
		});
		
		
//- --------------- Navigation Bar  -------------- //
block navpanel
	include template/nav_part2
	
	
//- --------------- Main Stuff  -------------- //
block content
	#contentPanel
		#loginContainer
			h1 Enroll
			img(src="/imgs/login.png", class="movie-poster")
			hr

			form(method="POST" action="#" style="text-align: center;")
				p.hint
					| !{bag.session.error_msg}
					br
					br
				p
					.hint Role
					select#select_role(name="charity_role")
						option Donor
						option Acceptor
						option CharityMonitor
				p
					//.hint Role					
					input(type="text" placeholder="role" name="roleText" value="Donor" readonly hidden)
				p
					.hint Enroll ID
					input(type="radio" name="username" hidden)
					input(type="text" placeholder="enrollID" name="username" required)
				p
					.hint Secret
					input(type="password" name="password" required)
				button(type="submit")#loginButton Enroll/Login
		
		#registerContainer
			h1 Register
			img(src="/imgs/register.png", class="movie-poster")
			hr

			form(method="POST" action="#" style="text-align: center;")
				p.info
					| !{bag.session.reg_error_msg}
					| !{bag.session.registration}
					br
					br
				p
					.hint Desired Enroll ID
					input#register_username(type="text" placeholder="enrollID" name="username" required)

				

				button(type="submit")#registerButton Register
				


